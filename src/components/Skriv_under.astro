<article class="flex items-center justify-center h-screen">
    <div class="p-6 rounded-lg shadow-md max-w-md w-full text-center">
        <!-- Overskrift -->
        <h3 class="text-5xl font-bold text-black">16.000</h3>
        <p class="mb-4">Har allerede skrevet under</p>

        <!-- Progress bar -->
        <div class="w-full bg-gray-300 h-10 rounded-full mb-6">
            <div class="h-full bg-blue-600 rounded-full" style="width: 70%;"></div>
        </div>

        <!-- E-mail input -->
