			import { animate, stagger, inView, scroll, timeline } from "motion";

	
			 
			  document.querySelectorAll("h2").forEach((heading) => {
            // heading starter gemt
            heading.style.opacity = 0;
            heading.style.transform = "scale(0.8)";  // Initial smaller scale for zoom effect

            inView(heading, ({ target, isIntersecting }) => {
                if (isIntersecting) {
                    // Trigger fade-in and zoom når H2 er i midten af viewport
                    animate(
                        target,
                        { opacity: [0, 1], transform: ["scale(0.8)", "scale()"] },
                        { duration: 0.9, easing: [0.17, 0.55, 0.55, 1] }
                    );
