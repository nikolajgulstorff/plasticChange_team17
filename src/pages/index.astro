			<script>
			/* Import af Motion One biblioteket */
			import { animate, stagger, inView, scroll, timeline } from "motion";

			 
			  document.querySelectorAll("h2").forEach((heading) => {
           
            heading.style.opacity = 0;
            heading.style.transform = "scale(0.8)";  // Initial smaller scale for zoom effect

            inView(heading, ({ target, isIntersecting }) => {
                if (isIntersecting) {
                    // Trigger fade-in and zoom når H2 er i midten af viewport
                    animate(
                        target,
                        { opacity: [0, 1], transform: ["scale(0.8)", "scale(1)"] },
                        { duration: 0.9, easing: [0.17, 0.55, 0.55, 1] }
                    );
                }
            }, { margin: "-50% 0px" }); // Trigger point: middle of viewport
        });

		inView("#stagger", () => {
  animate(
    ".fotosektioninview > div",
    { opacity: [0, 1], transform: ["translateY(20px)", "translateY(0)"] },
    {
      delay: stagger(1, { start: 0.5 }), // Justér starttid og delay for at finjustere animationen
      duration: 1.5, // Sætter varigheden af hver animation
      easing: "ease-out" // Sætter en glidende effekt
    }
  );
});
// JavaScript til at starte animationen i synsfeltet
const progressBar = document.getElementById("progress-bar");
const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      progressBar.classList.add("animate-progress-fill"); // Tilføj animationen
      observer.unobserve(progressBar); // Stop med at observere
    }
  });
}, { threshold: 0.5 }); // Aktiver animationen, når 50% af bjælken er synlig
observer.observe(progressBar);


		const garbageImages = document.querySelectorAll(".garbage-animation");


		function startGarbageFall() {
		garbageImages.forEach((originalImg, index) => {
			const garbageClone = originalImg.cloneNode(true);
			document.body.appendChild(garbageClone); 

			const randomPosition = Math.random() * 90 + 5;
			garbageClone.style.left = `${randomPosition}%`;
			garbageClone.style.top = "-100px"; 

	
			animate(
			garbageClone,
			{ 
				y: [-100, 8800],        // Fall from top to deep position
				opacity: [1,0.95, 0],       // Fade out by the end
			},
			{
				duration: 20 + index * 0.5,  // Vary duration for a natural look
				easing: "ease-in-out",
				delay: index * 0.5,          // Slight delay for each item
			}
			).finished.then(() => {
			// Remove clone after animation finishes
			garbageClone.remove();
			});
		});
		}

		setInterval(startGarbageFall, 3000);

		
		startGarbageFall();

		
    </script>

